<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="WeddingPhotos.Mobile.Views.ShipPage"
             Title="Ship Map">
    <ContentPage.Content>
        <StackLayout>
            <SearchBar Text="test" 
                       Placeholder="Search"
                       HeightRequest="50"/>
            <ListView ItemsSource="{Binding Decks}">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <ViewCell.View>
                                <Label Text="{Binding .}"
                                       TextColor="Black" />
                            </ViewCell.View>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>